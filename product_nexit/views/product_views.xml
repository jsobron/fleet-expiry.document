<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">product.inventory.form</field>
            <field name="model">product.inventory</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="quantity_on_hand"/>
                            <field name="inventory_cost"/>
                            <field name="cost_price"/>
                            <field name="in_moves_ids"/>
                            <field name="out_moves_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_product_tree" model="ir.ui.view">
            <field name="name">product.inventory.tree</field>
            <field name="model">product.inventory</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="quantity_on_hand"/>
                    <field name="inventory_cost"/>
                    <field name="cost_price"/>
                    <field name="in_moves_ids"/>
                    <field name="out_moves_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_product_search" model="ir.ui.view">
            <field name="name">product.inventory.search</field>
            <field name="model">product.inventory</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="quantity_on_hand"/>
                    <field name="inventory_cost"/>
                    <field name="cost_price"/>
                    <field name="in_moves_ids"/>
                    <field name="out_moves_ids"/>
                </search>
            </field>
        </record>

        <record id="action_product_tree" model="ir.actions.act_window">
            <field name="name">Product List</field>
            <field name="res_model">product.inventory</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
        </record>

        <!--Actions-->    
        <record id="action_product_form" model="ir.actions.act_window">
            <field name="name">Product Nexit</field>
            <field name="res_model">product.inventory</field>
            <field name="view_mode">form,tree</field>
            <field name="type">ir.actions.act_window</field>
        </record>

        <!--Menuitem-->
        <menuitem id="menu_product" name="Product" sequence="10"/>
        <menuitem id="menu_product_list" name="Productos en lista" parent="menu_product" action="action_product_tree" sequence="0"/>
    </data>

</odoo>